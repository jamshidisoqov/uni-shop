<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/root_bg"
    android:orientation="vertical"
    tools:context=".presentation.feature_main.feature_clients.fragment_client_detail.pages.fragment_sale.SaleFragment">
    <!--OutputProduct-->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sale_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/list_item_sale_list" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/root_bg2"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_standard"
        android:paddingBottom="@dimen/margin_standard">

        <TextView
            android:id="@+id/tv_all_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:drawablePadding="@dimen/margin_bigger"
            android:text="@string/default_basket_summ"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/money" />

        <TextView
            android:id="@+id/tv_debt_summ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:drawablePadding="@dimen/margin_bigger"
            android:text="@string/default_basket_summ"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/expanses" />
    </LinearLayout>

</LinearLayout>