<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/margin_standart"
    android:layout_margin="@dimen/margin_extra_small"
    app:cardBackgroundColor="#292727">


    <RelativeLayout
        android:padding="@dimen/margin_standart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name_balance"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/default_user_name"
            android:ellipsize="marquee"
            android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_saller_name_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_balance"
        android:text="@string/default_user_name"/>
    <ImageView
        android:id="@+id/img_money"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/money"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_toStartOf="@id/tv_buy_prices"/>
    <TextView
        android:id="@+id/tv_buy_prices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/green"
        android:text="@string/default_product_price"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_small"/>
    <TextView
        android:id="@+id/tv_buy_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/img_money"
        android:text="@string/default_date"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>